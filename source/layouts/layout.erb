<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || data.settings.site.title %></title>
    <!-- Define a description of your web page -->
    <meta name="description" content="<%= current_page.data.description || data.settings.site.description %>">
    <!-- Define keywords for SEO -->
    <meta name="keywords" content="<%= data.settings.site.keywords %>">
    <!-- Define the author of a page -->
    <meta name="author" content="<%= data.settings.author.name %>">
    <!-- Informations for facebook -->
    <meta property="og:title" content="<%= current_page.data.title || data.settings.site.title %>">
    <meta property="og:image" content="pictures/banner-home.jpg">
    <meta property="og:description" content="<%= current_page.data.description || data.settings.site.description %>">
    <meta property="og:site_name" content="Nom du site"/>
    <!-- Styles -->
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <!-- Uncomment this when you actually have a favicon.png in /images -->
    <%#= favicon_tag 'images/favicon.png' %>
    <script src="https://kit.fontawesome.com/7b8bec11dd.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= partial "layouts/partials/navbar" %>
    <%= partial "layouts/partials/banner" %>
    <%= yield %>
    <!-- We put the JS include tag after the yeild to prevent errors (when you try to select an element that is not already loaded on the page) -->
    <%= javascript_include_tag "application" %>
    <%= partial "layouts/partials/footer" %>
    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <!-- Form Post JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <!-- Google analytics tag -->
    <%= google_analytics_tag %>
  </body>
</html>

